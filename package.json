{
  "name": "html-boiler-2023",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && prettier --write dist/**/*.html",
    "preview": "vite preview",
    "prepare": "simple-git-hooks",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"src/**/*.js\"",
    "lint:prettier": "prettier --check src",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "fix": "run-p fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "prettier --write src",
    "fix:stylelint": "npm run lint:stylelint -- --fix",
    "image": "run-s image:clean image:opt image:gen",
    "image:opt": "node npm-scripts/opt.mjs",
    "image:gen": "node npm-scripts/gen.mjs",
    "image:clean": "rimraf src/public/img",
    "icon": "run-s icon:clean icon:gen",
    "icon:gen": "node npm-scripts/icon.mjs",
    "icon:clean": "rimraf src/public/icons/icon-*.png"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "css-declaration-sorter": "^7.3.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-css-import-order": "^1.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "fs": "0.0.1-security",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "lint-staged": "^15.5.2",
    "npm-run-all2": "^5.0.0",
    "path": "^0.12.7",
    "postcss": "^8.5.6",
    "postcss-preset-env": "^9.6.0",
    "prettier": "^3.8.1",
    "rimraf": "^5.0.10",
    "sass": "^1.97.3",
    "sharp": "^0.33.5",
    "simple-git-hooks": "^2.13.1",
    "stylelint": "^16.26.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recess-order": "^4.6.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "terser": "^5.46.0",
    "vite": "^5.4.21"
  },
  "dependencies": {
    "html-boiler-2023": "link:"
  }
}
